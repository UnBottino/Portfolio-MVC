                    </svg>
                </a>
            </div>
        </div>
        <div class="col-5 ms-5 my-auto">
            <div class="row mt-5">
                <h1 class="text-decoration-underline fw-bold">Send me a message</h1>
            </div>
            <div class="row my-5">
                <form id="contactForm" action="Contact" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="row mb-3">
                        <div class="col">
                            <div class="form-floating">
                                <input asp-for="Email" type="email" class="form-control" id="floatingEmail" placeholder="Email">
                                <label for="floatingEmail">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="">
                            <div class="form-floating">
                                <textarea asp-for="Message" class="form-control" placeholder="Write a message..." id="floatingTextarea" style="height: 140px"></textarea>
                                <label for="floatingTextarea">Write a message...</label>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row float-end">
                        <div class="">
                            <button id="btnSubmit" type="button" class="btn btn-primary px-3 py-3 fw-bold">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
       
<script>
    window.addEventListener("DOMContentLoaded", (event) => {
        $(function () {
            $(document).off('click', '#btnSubmit').on('click', '#btnSubmit', function (e) {
                $.ajax({
                    url: "/Home/Contact",
                    type: "POST",
                    dataType: "json",
                    data: $("#contactForm").serialize(),
                    contentType: "application/x-www-form-urlencoded; charset=utf-8",
                    success: function (response) {
                        if (response.success) {
                            window.location.href = "Index/";
                        } else {

                        }
                    },
                    error: function (response) {
                        
                    }
                });
            });
        });
    });
</script>                                