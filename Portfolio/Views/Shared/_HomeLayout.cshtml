<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
    <script src="https://kit.fontawesome.com/d1131e1fd8.js" crossorigin="anonymous"></script>

</head>
<body class="container-fluid m-0 p-0 bg-light dark-text">
    <header>
        <div class="w-100">
            <nav id="navbar" class="navbar navbar-expand-sm navbar-toggleable-sm fixed-top">
                <div class="container-fluid">
                    <a class="nav-link ms-lg-4" asp-area="" asp-controller="Home" asp-action="Index">
                        <div class="d-flex">
                            <svg width="50" viewBox="0 0 140 130" class="looka-1j8o68f">
                                <defs id="SvgjsDefs1371"></defs>
                                <g id="SvgjsG1372" featurekey="rootContainer" transform="matrix(1,0,0,1,0,0)" fill="#2d2d2d">
                                    <rect xmlns="http://www.w3.org/2000/svg" width="140" height="130" rx="10" ry="10"></rect>
                                </g>
                                <g id="SvgjsG1373" featurekey="q4o0QG-0" transform="matrix(5.959475999687186,0,0,5.959475999687186,15.470798297071731,-10.870087497067367)" fill="#f3f6f6">
                                    <path d="M0.76 17.44 l0.1 -11.92 l0.78 -0.34 l2.4 0.14 l0.54 0.2 l-0.2 4.7 l-0.24 7.34 l0.8 1.08 l1.52 -0.32 l-0.12 -8.5 l0.12 -4.62 l1.9 0 l0.06 12.98 l-0.54 1.32 l-2.5 0.72 l-3.6 -0.5 z M12.7 15 l-0.12 2.24 l0.66 0.28 l0.62 -0.12 l0.42 -0.92 l-0.1 -1.38 l-0.34 -0.98 l-0.58 -0.02 l-0.68 0 z M12.58 7.66 l0.2 4.38 l0.84 -0.12 l0.76 -0.62 l0.28 -1.34 l0.08 -1.58 l-0.94 -0.68 l-0.56 -0.08 z M14.2 20 l-4.14 0.04 l-0.32 -3.78 l0.1 -5.18 l0 -5.74 l3.78 -0.04 l1.54 0.32 l1.28 0.38 l0.24 0.44 l0.82 3.54 l-0.2 1.76 l-0.46 0.88 l-0.34 0.34 l-0.86 0.26 l0.92 0.4 l0.48 0.4 l0.5 1.92 l-0.4 3.08 l-0.86 0.7 z"></path>
                                </g>
                            </svg>
                            <h4 id="logo-text" class="my-auto ms-3 dark-text">ADRIAN COLLINS</h4>
                        </div>
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon">
                            <i class="fas fa-bars" style="color:#2d2d2d; font-size:28px;"></i>
                        </span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav nav-pills flex-grow-1">
                            <li id="nav-about" class="nav-item ms-3 ms-md-auto">
                                <a class="nav-link fs-5">About</a>
                            </li>
                            <li id="nav-skills" class="nav-item ms-3">
                                <a class="nav-link fs-5">Skills</a>
                            </li>
                            <li id="nav-experience" class="nav-item ms-3">
                                <a class="nav-link fs-5">Experience</a>
                            </li>
                            <li id="nav-projects" class="nav-item ms-3">
                                <a class="nav-link fs-5">Projects</a>
                            </li>
                            <li id="nav-contact" class="nav-item ms-3 me-3">
                                <a class="nav-link fs-5">Contact</a>
                            </li>
                        </ul>                        
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark-grey py-4 position-relative">
        @* Copyright *@
        <div class="position-absolute top-50 start-0 translate-middle-y ms-5">
            <div class="text-center fs-6 grey-text">
                <i class="fa fa-copyright"></i> Adrian Collins 2024
            </div>
        </div>

        @* Links *@
        <div class="custom-footer light-text mx-5">
            <div class="col">
                <div class="text-center">
                    <ul class="list-inline d-flex justify-content-center my-2">
                        <li id="linkedin">
                            <a href="https://www.linkedin.com/in/adriancollins59/" target="_blank">
                                <i class="fa-brands fa-linkedin-in" style="font-size:36px;"></i>
                            </a>
                        </li>
                        <li id="github" class="mx-2">
                            <a href="https://github.com/UnBottino" target="_blank">
                                <i class="fa-brands fa-github" style="font-size:36px;"></i>
                            </a>
                        </li>
                        <li id="mail">
                            <a href="https://www.reddit.com/r/wallagram/" target="_blank">
                                <i class="fa-solid fa-envelope" style="font-size:36px;"></i>
                            </a>
                        </li>
                    </ul>
                </div>

                @* Back to top *@
                <div id="scrollToTop" class="text-center grey-text mx-auto" style="width: 150px;">
                    <div class="pt-3">
                        <i class="fa-solid fa-hand-point-up" style="font-size: 24px;"></i>
                        <p class="p-0 m-0">Back to top?</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
