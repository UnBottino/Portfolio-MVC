<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
</head>
<body class="container-fluid m-0 p-0">
    <header>
        <div class="position-absolute w-100 my-3">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
                <div class="container-fluid">
                    <button class="navbar-toggler border-primary" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav nav-pills flex-grow-1">
                            <li class="nav-item ms-5">
                                <a class="nav-link text-dark fs-5" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item ms-5">
                                <a class="nav-link text-dark fs-5" asp-area="" asp-controller="Home" asp-action="About">About</a>
                            </li>
                            <li class="nav-item ms-5">
                                <a class="nav-link text-dark fs-5" asp-area="" asp-controller="Projects" asp-action="Index">Projects</a>
                            </li>
                            <li class="nav-item ms-5">
                                <a class="nav-link text-dark fs-5" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item me-5">
                                <a href="https://www.reddit.com/r/wallagram/" target="_blank">
                                    <img src="~/img/Logos/github.png" style="width: 48px;" />
                                </a>
                            </li>
                            <li class="nav-item me-5">
                                <a href="https://www.reddit.com/r/wallagram/" target="_blank">
                                    <img src="~/img/Logos/linkedin.png" style="width: 48px;" />
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
